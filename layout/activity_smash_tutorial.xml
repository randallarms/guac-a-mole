<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smashTutorialLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="#222222"
    tools:context="com.randallarms.dionysium.guac_a_mole.SmashTutorial"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/salt"
        android:layout_height="150dp"
        android:layout_width="wrap_content"
        android:background="@null"
        android:visibility="gone"
        android:layout_marginTop="-15dp"
        android:layout_marginLeft="0dp"
        app:srcCompat="@mipmap/salt_shaker_button" />

    <ImageButton
        android:id="@+id/limon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onLimon"
        android:visibility="gone"
        android:layout_marginLeft="290dp"
        app:srcCompat="@mipmap/limon_button" />

    <ImageView
        android:id="@+id/guacBowl"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/guacamole_back" />

    <ImageView
        android:id="@+id/splat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/splat" />

    <ImageButton
        android:id="@+id/avocado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onSmash"
        android:visibility="gone"
        app:srcCompat="@mipmap/avocado_button" />

    <ImageButton
        android:id="@+id/avocadoRotten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onSmash"
        android:visibility="gone"
        app:srcCompat="@mipmap/avocado_rotten_button" />

    <ImageButton
        android:id="@+id/chili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="onSmash"
        android:visibility="gone"
        app:srcCompat="@mipmap/chili_button" />

    <ImageView
        android:id="@+id/chiliCounter"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/chili_meter_0" />

    <TextView
        android:id="@+id/multiCounter"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/scoreCounter"
        android:layout_toRightOf="@+id/scoreCounter"
        android:text="x1"
        android:textColor="#95d002"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/scoreCounter"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#95d002"
        android:textStyle="bold"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/dialogBox"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dialog_box_back"
        android:onClick="onNext" />

    <TextView
        android:id="@+id/dialogText"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="..."
        android:textStyle="bold"
        android:textColor="#95d002"
        android:textSize="22sp"
        android:onClick="onNext" />

</RelativeLayout>